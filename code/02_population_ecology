#Code for population spread over space

library(spatstat)

#load example dataset
bei

plot(bei,pch=15,cex=.5)

# ancillary variables
bei.extra

plot(bei.extra)

# only plot elevation
el <- bei.extra$elev
plot(el)

# alternatively
# use double square brackets because it is a raster?
# el <- bei.extra[[1]]

#bulid density raster map from points in bei dataset

dmap <- density(bei)
plot(dmap)

#superimpose one dataset to the other
points(bei, cex=.3, pch=20)

# plotting together density map and elevation map
# we create multiframe (a box to add several objects to, basically)

par(mfrow=c(2,1))
plot(dmap)
plot(el)

# let's change the color of our maps

cr<-colorRampPalette(c("#ffffff", "#15c7eb", "#faa60a", "#fa0af2", "#000000"))(100)
plot(dmap, col=cr)
